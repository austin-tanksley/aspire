---
import heroImage from '../assets/hero-image.jpg'


---
<section class="hero" style={`background-image: linear-gradient(rgba(0, 0, 0, 1), rgba(0, 0, 0, 0)), url(${heroImage.src}); background-size: cover; background-position: center;`}>
    <div class="container">
        <div class="hero__content">
            <div class="top-line">
                <span>Tulsa's Premier Detailing Service</span>
            </div>
            <h1 class="hero__title">We make getting your car detailed easy and convenient.</h1>
                <p class="hero__description">
                    Get a Fast and Easy Quote, or Give Us a Call.
                </p>
                <div class="hero__buttons">
                    <button class="hero__button" get-quote-btn>
                        Get a Quote
                    </button>
                    <button class="hero__button">
                        <a href="tel:9185108976">Call or Text</a>
                    </button>
                </div>
        </div>
    </div>
</section>
<style>
    .hero {
        color: #fff;
        padding: 196px 0;
        border-bottom: 2px solid #ff4343;
    }
    .top-line {
        font-size: 14px;
        font-weight: 700;
        line-height: 150%;
        color: #ff4343;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
    .hero__content {
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 8px;
        justify-content: center;
        align-items: center;
        max-width: 1024px;
    }
    .hero__title {
        font-size: 64px;
        font-weight: 900;
        line-height: 110%;
        /* letter-spacing: 0.05em; */
        text-align: center;

        margin: 0;
    }
    .hero__description {
        text-align: center;
        font-size: 18px;
        font-weight: 500;
        line-height: 150%;
        color: #b1b1b1;
    }
    .hero__buttons {
        display: flex;
        gap: 16px;
    }
    .hero__button {
        background-color: #202020;
        color: #ffffff;
        border: 2px solid #ff4343;
        border-radius: 32px;
        padding: 16px 32px;
        font-size: 14px;
        font-weight: 700;
        line-height: 150%;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .hero__button:hover {
        background-color: #4b4848;
        color: #ffffff;
        transition: all 0.6s ease;
        cursor: pointer;
    }
    @media (max-width: 768px) {
        .hero__title { 
            font-size: 48px;
        }
        .hero{
            padding: 128px 0;
        }
        .hero__buttons {
            flex-direction: column;
        }
        /* .hero__description {
            font-size: 16px;
        }
        .hero__button {
            font-size: 12px;
        } */
    }
</style>

<script is:inline>
    const quoteBtn = document.querySelector('[get-quote-btn]');
    if (quoteBtn) {
        quoteBtn.addEventListener('click', function() {
            console.log('Quote button clicked!');
            const quoteForm = document.querySelector('[quote-form]');
            quoteForm.scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        });
    }
</script>


