---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - Aspire Detailing">
    <main class="success-page">
        <div class="container">
            <div class="success-content">
                <div class="success-icon">âœ…</div>
                <h1>Thank You!</h1>
                <p>Your quote request has been successfully submitted.</p>
                <p>We'll review your information and get back to you within 24 hours with a personalized quote.</p>
                <div class="success-actions">
                    <a href="/" class="btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .success-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
        padding: 40px 20px;
    }

    .container {
        max-width: 600px;
        width: 100%;
    }

    .success-content {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 48px 32px;
        text-align: center;
        backdrop-filter: blur(10px);
    }

    .success-icon {
        font-size: 64px;
        margin-bottom: 24px;
    }

    .success-content h1 {
        font-size: 36px;
        font-weight: 700;
        color: #ffffff;
        margin: 0 0 16px 0;
        background: linear-gradient(135deg, #ffffff 0%, #ff4343 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .success-content p {
        font-size: 18px;
        color: #cccccc;
        line-height: 1.6;
        margin: 0 0 16px 0;
    }

    .success-actions {
        margin-top: 32px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff4343 0%, #e63939 100%);
        color: #ffffff;
        text-decoration: none;
        padding: 16px 32px;
        border-radius: 50px;
        font-weight: 600;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 67, 67, 0.3);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #e63939 0%, #d63030 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 67, 67, 0.4);
    }

    @media (max-width: 768px) {
        .success-content {
            padding: 32px 24px;
        }

        .success-content h1 {
            font-size: 28px;
        }

        .success-content p {
            font-size: 16px;
        }
    }
</style> 